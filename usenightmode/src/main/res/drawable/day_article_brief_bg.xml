<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--圆角边框，背景阴影效果-->
    <item>
        <shape
            android:shape="rectangle">
            <solid
                android:color="#14000000"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>

    <!--圆角边框，背景色-->
    <item
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="5dp"/>
            <solid
                android:color="@color/colorCardBackground"/>
            <padding android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>
</layer-list>